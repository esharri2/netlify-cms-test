<div>
    <div class="flex flex-col items-start lg:flex-row mt-4">
        <img 
            class="block max-w-md w-full mb-6 lg:pr-6" 
            srcset="{% srcset cover %}" 
            src="{% src cover %}" 
            sizes="(min-width: 767px) 700px, 100vw"
            alt="The book cover for {{title}}"/>
        <div>
        {% if synopsis%}
            <p class="my-4 first:mt-0">{{synopsis}}</p>
        {% endif %}
        <div>
            <p class="inline-block">{{date | prettyMonthAndYear}}</p>
            {% if publisher%}
                <p class="first:mt-0 inline-block">, {{publisher}}</p>
            {% endif %}
        </div>
        {% for blurb in blurbs %}
            <div class="my-4">
                <p class="italic mb-2">"{{blurb.text}}"</p>
                <p>{{blurb.attribution}}
            </div>
        {% endfor %}
        {% for purchase_link in purchase_links%}
            <a class="cmp-link-button my-4 block" href="{{purchase_link.link}}">Buy at {{purchase_link.source}}</a>
        {% endfor %}
        </div>
    </div>
    {% if reviews.length > 0 %}<h2 class="cmp-h2">Reviews and Press</h2>{% endif %}
    {% for review in reviews %}
            <a class="my-4 cmp-link block" href="{{review.link}}">{{review.title}}{% if review.title %} | {% endif %}<span class="italic underline">{{review.publication}}</span></a>
    {% endfor %}
</div>

