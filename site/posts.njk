---
layout: default
eleventyNavigation:
  key: News
pagination:
  data: collections.post
  size: 100
  alias: posts
---

<h1 class="cmp-h1">News</h1>
{% for post in posts %}
  <article class="mt-4">
    <h2 class="cmp-h2">{{ post.data.title }}</h2>
    {% if post.data.date %}
      <p>{{post.data.date | prettyDate}}</p>
    {% endif %}
    {% if post.data.image %}
      <img class="my-4" src="{{post.data.image}}"/>
    {% endif %}
    <div class="cmp-markdown">
      {{ post.templateContent | safe}}
    </div>
  </article>
{% endfor %}
</ol>