---
layout: container
eleventyNavigation:
  key: Events
  order: 4
pagination:
  data: collections.event
  size: 100
  alias: events
---
<h1 class="cmp-h1">Events</h1>

<ul>
{% for event in events | reverse %}
  <li class="border-solid border-black border-b py-4">
    <p class="text-xl">{{event.data.title}}</p>
    <p>{{event.data.date | prettyDateAndTime}}</p> 
    <p>{{event.data.location}}</p>
    {% if event.data.description %}
      <p class="block mt-2">{{event.data.description}}</p>
    {% endif %}
  </li>
{% endfor %}


</ul>



